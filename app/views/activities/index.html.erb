<h1>All The Activities</h1>

<ul>
  <% @activities.each do |activity| %>
    <li><%= link_to activity.name, activity_path(activity.id) %></li>
  <% end %>
</ul>

<%= form_for :activity do |f| %>
  <p><%= f.collection_select :camper_id, Camper.all, :id, :name %></p>
  <p><%= f.collection_select :activity_id, Activity.all, :id, :name %></p>
  <p><%= f.label :time %>
  <%= f.text_field :time %></p>
  <%= f.submit %>
<% end %>